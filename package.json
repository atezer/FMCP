{
	"name": "@atezer/figma-mcp-bridge",
	"version": "1.1.1",
	"description": "F-MCP ATezer: MCP server and Figma plugin bridge for Claude/Cursor. No REST token required.",
	"type": "module",
	"main": "dist/local.js",
	"types": "dist/local.d.ts",
	"bin": {
		"figma-mcp-bridge": "./dist/local.js"
	},
	"files": [
		"dist",
		"f-mcp-plugin",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"prepublishOnly": "npm run build",
		"deploy": "wrangler deploy",
		"dev": "wrangler dev",
		"dev:local": "tsx src/local.ts",
		"dev:plugin-only": "node dist/local-plugin-only.js",
		"build:run": "npm run build:local && node dist/local-plugin-only.js",
		"figma:debug": "./scripts/auto-launch-figma-plugin.sh",
		"build": "npm run build:local && npm run build:cloudflare",
		"build:local": "tsc -p tsconfig.local.json",
		"build:cloudflare": "tsc -p tsconfig.cloudflare.json",
		"start": "wrangler dev",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"format": "biome format --write",
		"lint:fix": "biome lint --fix",
		"cf-typegen": "wrangler types",
		"type-check": "tsc --noEmit"
	},
	"keywords": [
		"mcp",
		"figma",
		"plugin",
		"console",
		"debugging",
		"ai",
		"anthropic",
		"claude",
		"cloudflare",
		"workers"
	],
	"author": "Abdussamed Tezer",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/atezer/FMCP.git"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"dependencies": {
		"@cloudflare/puppeteer": "^1.0.4",
		"@modelcontextprotocol/sdk": "^1.25.3",
		"agents": "^0.2.8",
		"chrome-remote-interface": "^0.33.2",
		"pino": "^9.5.0",
		"pino-pretty": "^13.0.0",
		"puppeteer-core": "^23.11.1",
		"uuid": "^11.0.3",
		"ws": "^8.19.0",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.2",
		"@types/uuid": "^10.0.0",
		"@types/ws": "^8.18.1",
		"jest": "^29.7.0",
		"ts-jest": "^29.2.5",
		"tsx": "^4.19.2",
		"typescript": "5.9.3",
		"wrangler": "^4.42.0"
	}
}
