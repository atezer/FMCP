#!/bin/bash
# F-MCP ATezer Bridge Launcher - runs the plugin via AppleScript
# Add this app to System Settings > Privacy & Security > Accessibility for autorun to work

# From .app/Contents/MacOS, go up to scripts folder
SCRIPT_DIR="$(cd "$(dirname "$0")/../../.." && pwd)"
APPLESCRIPT="$SCRIPT_DIR/autorun-bridge.applescript"

if [ -f "$APPLESCRIPT" ]; then
    osascript "$APPLESCRIPT"
else
    # Fallback if run from different location
    osascript "/Users/abdussamed.tezer/FCM/f-mcp-bridge/scripts/autorun-bridge.applescript"
fi

# Exit immediately so Launch Agent doesn't think we're still running
exit 0
